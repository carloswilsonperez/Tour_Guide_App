<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/category_rock"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tour_item_image"
        style="@style/tour_image_view_style" />

    <LinearLayout
        android:id="@+id/tour_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tour_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/text_color"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tour_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="16dp"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tour_when"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="When:"
            android:textSize="16dp"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tour_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Address"
            android:textSize="16dp"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tour_item_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Phone:"
            android:textSize="16dp"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tour_item_office_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Office Hours:"
            android:textSize="16dp"
            android:textColor="@color/text_color" />

    </LinearLayout>
</LinearLayout>
